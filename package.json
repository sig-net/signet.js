{
  "name": "signet.js",
  "version": "0.3.1-beta.4",
  "description": "A TypeScript library for handling multi-chain transactions and signatures using Signet MPC",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "watch": "tsdown --watch",
    "build": "tsdown",
    "test:solana": "vitest run tests/integration/solana/Solana.integration.test.ts",
    "test:solana:watch": "vitest --watch tests/integration/solana/Solana.integration.test.ts",
    "pre:deploy": "npm run build && npm run docs:build",
    "publish-npm": "npm run pre:deploy && npm publish",
    "publish-npm:beta": "npm run pre:deploy && npm publish --tag beta",
    "release:patch": "npm version patch --no-git-tag-version --force && npm run publish-npm",
    "release:minor": "npm version minor --no-git-tag-version --force && npm run publish-npm",
    "release:major": "npm version major --no-git-tag-version --force && npm run publish-npm",
    "release:beta": "npm version prerelease --preid=beta --no-git-tag-version --force && npm run publish-npm:beta",
    "hardhat": "pnpm exec hardhat node --config hardhat.config.mts",
    "test": "pnpm exec hardhat node --config hardhat.config.mts & sleep 2 && vitest run && pkill -f hardhat",
    "test:watch": "pnpm exec hardhat node --config hardhat.config.mts & sleep 2 && vitest --watch",
    "test:ci": "pnpm exec hardhat node --config hardhat.config.mts & NODE_PID=$!; sleep 2 && vitest run; kill $NODE_PID",
    "docs:dev": "vocs dev",
    "docs:build": "vocs build",
    "docs:preview": "vocs preview",
    "format": "prettier --write .",
    "lint": "eslint 'src/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "author": "Sig Network",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sig-net/signet.js"
  },
  "homepage": "https://github.com/sig-net/signet.js",
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "mpc",
    "multi-chain",
    "ethereum",
    "bitcoin",
    "cosmos"
  ],
  "devDependencies": {
    "@aa-sdk/core": "^4.13.0",
    "@account-kit/infra": "^4.13.0",
    "@account-kit/smart-contracts": "^4.13.0",
    "@eslint/js": "^9.18.0",
    "@noble/curves": "^1.8.1",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/bn.js": "^5.1.5",
    "@types/elliptic": "^6.4.18",
    "@types/node": "^22.10.10",
    "@types/react": "^19.0.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import-x": "^4.6.0",
    "hardhat": "^2.22.18",
    "prettier": "^3.8.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.21.0",
    "vitest": "^3.0.4",
    "vocs": "^1.4.1"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.0",
    "@cosmjs/amino": "^0.32.4",
    "@cosmjs/crypto": "^0.32.4",
    "@cosmjs/encoding": "^0.32.4",
    "@cosmjs/math": "^0.32.4",
    "@cosmjs/proto-signing": "^0.32.4",
    "@cosmjs/stargate": "^0.32.4",
    "@scure/base": "^1.2.4",
    "@solana/web3.js": "^1.98.0",
    "bech32": "^2.0.0",
    "bitcoinjs-lib": "^6.1.5",
    "bn.js": "^5.2.1",
    "chain-registry": "^1.69.72",
    "coinselect": "^3.1.13",
    "cosmjs-types": "^0.9.0",
    "elliptic": "^6.6.1",
    "viem": "^2.22.14"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
